<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A817DD"
    android:orientation="vertical"
    tools:context=".ui.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/useer_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="FullName"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="Email"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#000"  />

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="Data of Birth"
                android:inputType="date"
                android:padding="16dp"
                android:textColor="#000"  />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="Phone"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="#000"  />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:background="@drawable/custome_spinner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chooseCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="choose Country"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/SpinnerCountry"
                    android:layout_width="213dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="-24dp"
                    android:layout_toEndOf="@+id/chooseCountry"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="125dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:background="@drawable/custome_spinner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/intenddegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="intended degree"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/degree"
                    android:layout_width="213dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="-24dp"
                    android:layout_toEndOf="@+id/intenddegree"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="125dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/Gpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="GPA"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="#000"  />
            <EditText
                android:id="@+id/sat_Score_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="SAT Score Range"
                android:inputType="numberDecimal"
                android:padding="16dp"
                android:textColor="#000"  />
            <EditText
                android:id="@+id/Act_scoreRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="Act_ScoreRange"
                android:inputType="number"
                android:padding="16dp"
                android:textColor="#000"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custome_spinner"
                android:text="Courses :"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginLeft="16dp"/>

            <EditText
                android:id="@+id/courses"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="enter your courses"
                android:inputType="textLongMessage"
                android:padding="16dp"
                android:textColor="#000"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/custome_spinner"
                android:text="Activities (add up to 4 activities)"
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Activity"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:hint="enter your activiy"
                android:inputType="textLongMessage"
                android:padding="16dp"
                android:textColor="#000"  />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:background="@drawable/custome_spinner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/aid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Financial aid"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/Fininalaid"
                    android:layout_width="213dp"
                    android:layout_height="42dp"
                    android:layout_marginRight="-24dp"
                    android:layout_toEndOf="@+id/aid"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="125dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/custome_spinner"
                android:text="show Result"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>